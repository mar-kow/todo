<p id="notice"><%= notice %></p>

  <section>
    <h1>The List of Tasks!</h1>

      <%= link_to 'All', tasks_path, class: 'button' %>

      <%= link_to 'To Do', to_do_tasks_path, class: 'button' %>

      <%= link_to 'In Progress', in_progress_tasks_path, class: 'button' %>

      <%= link_to 'Done', done_tasks_path, class: 'button' %>

    <div class="table"><table>
        <thead>
          <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Created</th>
          <th>Updated</th>
          <th>Deadline</th>
          <th>Priority</th>

          <th colspan="3">More options</th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
           <tr>
              <td><%= task.name %></td>
              <td><%= task.status.humanize %></td>
              <td><%= task.created_at.strftime("%d/%m/%Y") %></td>
              <td><%= task.updated_at.strftime("%d/%m/%Y") %></td>
              <td><%= task.deadline_at %></td>
              <td><%= task.priority %></td>
              <td><%= link_to 'Show', task %></td>
              <td><%= link_to 'Edit', edit_task_path(task) %></td>
              <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Task', new_task_path, class: 'button' %>

  </section>
