<!DOCTYPE html>

<html>

  <head>
        <%= stylesheet_link_tag "app\assets\stylesheets\application.css" %>
  </head>

  <body>

    <p id="notice"><%= notice %></p>

    <div><h1>The List of Tasks</h1></div>

    <div class="button">
      <%= link_to tasks_path do %>
      All
      <% end %>
    </div>

    <div class="button">
      <%= link_to to_do_tasks_path do %>
      To Do
      <% end %>
    </div>

    <div class="button">
      <%= link_to in_progress_tasks_path do %>
      In Progress
      <% end %>
    </div>

    <div class="button">
      <%= link_to done_tasks_path do %>
      Done
      <% end %>
    </div>

    <br>

    <div class="table"><table>
      <thead>
        <tr>
         <th>Name</th>
         <th>Status</th>
         <th>Created at</th>
         <th>Updated at</th>
         <th>Deadline at</th>
         <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.status.humanize %></td>
            <td><%= task.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= task.updated_at.strftime("%d/%m/%Y") %></td>
            <td><%= task.deadline_at %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <br>

    <%= link_to 'New Task', new_task_path, class: 'button' %>

  </body>

</html>
